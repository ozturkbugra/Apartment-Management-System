@{
    ViewBag.Title = "Toplu Makbuz";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string tl = "₺";
}

<div class="pagetitle">
    <h1>Toplu Makbuz Kes</h1>
</div><!-- End Page Title -->

<form method="get">
    <div class="row">
        <div class="col-lg-3 col-md-3 col-sm-6">
            <input type="number" class="form-control" name="DaireNo" placeholder="Daire No" value="@ViewBag.DaireNo" />
        </div>
        <div class="col-lg-1 col-md-1 col-sm-6">
            <div class="col-12"><button type="submit" class="btn btn-success">Ara</button></div>
        </div>
        @if (ViewBag.b != null)
        {
            <div class="col-lg-3 col-md-3 col-sm-12">
                <h5>Ad Soyad: @ViewBag.b.AdSoyad</h5>
                <h5>Durum: @ViewBag.b.DaireDurum</h5>
                <h5>Borç: @ViewBag.b.Borc.ToString("N2") @tl</h5>
            </div>
        }
    </div>
</form>

@if (ViewBag.b != null)
{
    <br />
    <form method="post" action="/TopluMakbuz/Olustur">
        <input type="hidden" name="daireID" value="@ViewBag.b.DaireID" />
        <div class="row">
            <!-- AİDAT BORÇLARI -->
            <div class="col-md-6 col-sm-12">
                <div class="card-body">
                    <h5 class="card-title">Aidat Borçları</h5>
                    <div class="table-responsive">
                        <table class="table table-borderless table-striped table-danger table-hover datatable">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th scope="col">Dönem</th>
                                    <th scope="col">Tutar</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ViewBag.AidatBorclar)
                                {
                                    <tr>
                                        <td>
                                            <input type="checkbox"
                                                   name="SecilenAidatlar"
                                                   value="@item.AidatID"
                                                   class="borcCheckbox"
                                                   data-tutar="@item.AidatTutar" />
                                        </td>
                                        <td>@item.AidatAy - @item.AidatYil</td>
                                        <td>@item.AidatTutar.ToString("N2") ₺</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- EK BORÇLARI -->
            <div class="col-md-6 col-sm-12">
                <div class="card-body">
                    <h5 class="card-title">Ek Borçları</h5>
                    <div class="table-responsive">
                        <table class="table table-borderless table-striped table-warning table-hover datatable">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th scope="col">Dönem</th>
                                    <th scope="col">Tutar</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ViewBag.EkBorclar)
                                {
                                    <tr>
                                        <td>
                                            <input type="checkbox"
                                                   name="SecilenEkler"
                                                   value="@item.EkID"
                                                   class="borcCheckbox"
                                                   data-tutar="@item.EkTutar" />
                                        </td>
                                        <td>@item.EkAy - @item.EkYil</td>
                                        <td>@item.EkTutar.ToString("N2") ₺</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>


        @if (ViewBag.DonemSorgu == true)
        {
            <div class="text-center mt-3">
                <h4>Seçilen Toplam: <span id="toplamTutar">0,00</span> ₺</h4>
                <button type="submit" class="btn btn-primary mt-2">Toplu Makbuz Oluştur</button>
            </div>

        }
        @if (ViewBag.DonemSorgu == false)
        {
            <div class="text-center mt-3">
                <h4>Seçilen Toplam: <span id="toplamTutar">0,00</span> ₺</h4>
                <button type="submit" class="btn btn-primary mt-2" disabled>Toplu Makbuz Oluştur</button>
            </div>
            <p class="text-danger text-center">@DateTime.Now.ToString("MMMM") ayı dönemini eklemeniz gerekmektedir.</p>

        }



        <!-- TOPLAM TUTAR -->

        <div class="row mt-5">
            <div class="col-12">
                <div class="table-responsive">
                    <table class="table table-striped table-hover dt" id="makbuzTable">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Makbuz No</th>
                                <th>Daire No</th>
                                <th>Ad Soyad</th>
                                <th>Tutar</th>
                                <th>Tarih</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.Makbuzlar)
                            {
                                <tr>
                                    <td><a href="/Makbuz/GeneratePDF?MakbuzID=@item.MakbuzID" class="btn btn-success" target="_blank"> <i class="bi bi-printer"></i> YAZDIR</a></td>
                                    <td>@item.MakbuzNo</td>
                                    <td>@ViewBag.DaireNo</td>
                                    <td>@ViewBag.b.AdSoyad</td>
                                    <td>@item.MabuzTutar.ToString("N2") ₺</td>
                                    <td>@item.MakbuzTarihi.ToString("dd.MM.yyyy")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- DataTables JS & CSS -->
        <link rel="stylesheet" href="https://cdn.datatables.net/2.0.0/css/dataTables.dataTables.min.css" />
        <script src="https://cdn.datatables.net/2.0.0/js/dataTables.min.js"></script>

        <script>
            $(document).ready(function () {
                $('#makbuzTable').DataTable({
                    pageLength: 10,
                    order: [[1, 'desc']], // MakbuzNo'ya göre azalan sırala
                    language: {
                        url: "https://cdn.datatables.net/plug-ins/2.0.0/i18n/tr.json"
                    }
                });
            });
        </script>

    </form>
}

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    $(document).ready(function() {

        // 🔹 Checkbox değiştikçe toplamı hesapla
        $(document).on("change", ".borcCheckbox", function() {
            let toplam = 0;
            $(".borcCheckbox:checked").each(function() {
                toplam += parseFloat($(this).data("tutar"));
            });
            $("#toplamTutar").text(toplam.toLocaleString('tr-TR', { minimumFractionDigits: 2 }));
        });

        // 🔹 SweetAlert mesajları
        @if (TempData["Hata"] != null)
        {
            <text>
                Swal.fire({
                    icon: 'error',
                    title: 'HATA!',
                    text: '@Html.Raw(HttpUtility.JavaScriptStringEncode(TempData["Hata"].ToString()))'
                });
            </text>
        }

        @if (TempData["Basarili"] != null)
        {
            <text>
                Swal.fire({
                    icon: 'success',
                    title: 'Başarılı!',
                    text: '@Html.Raw(HttpUtility.JavaScriptStringEncode(TempData["Basarili"].ToString()))'
                });
            </text>
        }
    });
</script>
