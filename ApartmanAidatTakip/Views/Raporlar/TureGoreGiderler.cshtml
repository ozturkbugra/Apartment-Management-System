@{
    ViewBag.Title = "Türe Göre Giderler";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string tl = "₺";
}

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">

<style>
    :root {
        --bg-body: #f0f2f5;
        --card-shadow: 0 10px 30px rgba(0,0,0,0.05);
        --primary-grad: linear-gradient(135deg, #4f46e5 0%, #818cf8 100%);
        --danger-grad: linear-gradient(135deg, #ef4444 0%, #f87171 100%);
        --danger-soft: #fef2f2;
        --danger-text: #991b1b;
    }

    body {
        font-family: 'Poppins', sans-serif;
        background-color: var(--bg-body);
        color: #344767;
    }

    /* Filtre Kartı */
    .filter-card {
        background: #fff;
        border-radius: 16px;
        padding: 25px;
        box-shadow: var(--card-shadow);
        margin-bottom: 30px;
        border-left: 5px solid #ef4444;
    }

    .form-label-custom {
        font-size: 0.8rem;
        font-weight: 700;
        text-transform: uppercase;
        color: #64748b;
        margin-bottom: 8px;
        display: block;
    }

    .form-control-modern, .form-select-modern {
        border: 2px solid #e2e8f0;
        border-radius: 10px;
        padding: 10px 15px;
        font-size: 0.95rem;
        transition: all 0.3s;
    }

        .form-control-modern:focus, .form-select-modern:focus {
            border-color: #ef4444;
            box-shadow: 0 0 0 4px rgba(239, 68, 68, 0.1);
        }

    .btn-filter {
        background: var(--danger-grad);
        color: white;
        border: none;
        padding: 12px;
        border-radius: 10px;
        font-weight: 600;
        width: 100%;
        transition: transform 0.2s;
        box-shadow: 0 4px 15px rgba(239, 68, 68, 0.3);
    }

        .btn-filter:hover {
            transform: translateY(-2px);
            color: white;
        }

    /* Tablo Kartı */
    .table-card {
        background: #fff;
        border-radius: 16px;
        box-shadow: var(--card-shadow);
        overflow: hidden;
        border-top: 4px solid #ef4444;
        height: 100%;
    }

    .modern-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
    }

        .modern-table thead th {
            background-color: #f8f9fa;
            color: #64748b;
            font-size: 0.75rem;
            font-weight: 700;
            text-transform: uppercase;
            padding: 15px 20px;
            border-bottom: 1px solid #e2e8f0;
        }

        .modern-table tbody td {
            padding: 15px 20px;
            vertical-align: middle;
            border-bottom: 1px solid #f1f5f9;
            font-size: 0.9rem;
        }

        .modern-table tbody tr:hover {
            background-color: #fff1f2;
        }

    /* Özet Kartı (Sağ Taraf) */
    .summary-card {
        background: var(--danger-grad);
        color: white;
        border-radius: 16px;
        padding: 30px;
        text-align: center;
        box-shadow: 0 10px 25px rgba(239, 68, 68, 0.3);
        position: relative;
        overflow: hidden;
        display: flex;
        flex-direction: column;
        justify-content: center;
        height: 200px;
    }

    .summary-icon {
        font-size: 8rem;
        position: absolute;
        right: -20px;
        bottom: -30px;
        opacity: 0.15;
        transform: rotate(-15deg);
    }

    .summary-title {
        text-transform: uppercase;
        letter-spacing: 1px;
        font-size: 0.9rem;
        opacity: 0.9;
        margin-bottom: 10px;
    }

    .summary-value {
        font-size: 2.5rem;
        font-weight: 800;
        margin: 0;
    }

    .empty-state {
        text-align: center;
        padding: 50px 20px;
        color: #cbd5e1;
    }
</style>

<div class="container-fluid py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="fw-bold mb-0 text-dark">Gider Analizi</h3>
            <span class="text-muted small">Kategori bazlı harcama raporu</span>
        </div>
    </div>

    <div class="filter-card">
        <form action="/Raporlar/TureGoreGiderler" method="get">
            <div class="row align-items-end g-3">
                <div class="col-lg-3 col-md-6">
                    <label class="form-label-custom"><i class="bi bi-tags me-1"></i> Gİder Türü</label>
                    <select class="form-select form-select-modern" name="GiderTuruID">
                        @foreach (var item in ViewBag.GiderTuru)
                        {
                            <option value="@item.GiderTuruID" @(item.GiderTuruID == ViewBag.giderturudeger ? "selected" : "")>@item.GiderTuruAdi</option>
                        }
                    </select>
                </div>
                <div class="col-lg-3 col-md-6">
                    <label class="form-label-custom"><i class="bi bi-calendar-range me-1"></i> Başlangıç</label>
                    <input type="date" name="ilk" class="form-control form-control-modern" value="@ViewBag.tarihdeger1" />
                </div>
                <div class="col-lg-3 col-md-6">
                    <label class="form-label-custom"><i class="bi bi-calendar-check me-1"></i> BİTİş</label>
                    <input type="date" name="son" class="form-control form-control-modern" value="@ViewBag.tarihdeger2" />
                </div>
                <div class="col-lg-3 col-md-6">
                    <button type="submit" class="btn-filter">
                        <i class="bi bi-search me-2"></i> Listele
                    </button>
                </div>
            </div>
        </form>
    </div>

    @if (ViewBag.Gider != null)
    {
        <div class="row g-4">

            <div class="col-lg-8">
                <div class="table-card">
                    <div class="px-4 py-3 border-bottom d-flex align-items-center justify-content-between bg-white">
                        <h6 class="mb-0 fw-bold text-danger"><i class="bi bi-list-columns-reverse me-2"></i>Harcama Listesi</h6>
                        @*<span class="badge bg-danger bg-opacity-10 text-danger">@(((List<object>)ViewBag.Gider).Count) Kayıt</span>*@
                    </div>

                    <div class="table-responsive">
                        <table class="modern-table datatable">
                            <thead>
                                <tr>
                                    <th>Tarİh</th>
                                    <th>Fİş No</th>
                                    <th>Kategorİ</th>
                                    <th>Açıklama</th>
                                    <th class="text-end">Tutar</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ViewBag.Gider)
                                {
                                    <tr>
                                        <td class="text-muted">@item.GiderTarih.ToString("dd.MM.yyyy")</td>
                                        <td class="fw-bold">#@item.GiderNo</td>
                                        <td><span class="badge bg-light text-dark border">@item.GiderTuruAdi</span></td>
                                        <td class="small text-muted">@item.GiderAciklama</td>
                                        <td class="text-end fw-bold text-danger">@item.GiderTutar.ToString("N2") @tl</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="summary-card">
                    <i class="bi bi-cart-x summary-icon"></i>
                    <div class="summary-title">TOPLAM HARCAMA</div>
                    <div class="summary-value">@ViewBag.Toplam.ToString("N2") @tl</div>
                    <div class="mt-3 small opacity-75 border-top pt-3" style="border-color: rgba(255,255,255,0.2) !important;">
                        Seçilen tarih aralığındaki toplam tutar.
                    </div>
                </div>

                <div class="mt-4 p-3 bg-white rounded-3 shadow-sm border border-light">
                    <div class="d-flex align-items-center text-muted">
                        <i class="bi bi-info-circle-fill me-2 text-info"></i>
                        <small>Bu rapordaki tutarlar sadece seçilen kategoriye aittir.</small>
                    </div>
                </div>
            </div>

        </div>
    }
    else
    {
        <div class="empty-state">
            <i class="bi bi-clipboard-x display-1 mb-3 d-block opacity-25"></i>
            <h4 class="fw-bold text-dark">Kayıt Bulunamadı</h4>
            <p class="text-muted">Kriterlere uygun harcama kaydı yok veya filtreleme yapılmadı.</p>
        </div>
    }

</div>